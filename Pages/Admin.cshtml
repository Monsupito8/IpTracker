        }
        
        // –ü–æ–∫–∞–∑–∞—Ç—å –¥–µ—Ç–∞–ª–∏
        function showDetails(ip, userAgent) {
            const details = document.getElementById('details');
            const content = document.getElementById('detailsContent');
            
            // –î–µ–∫–æ–¥–∏—Ä—É–µ–º User-Agent
            const decodedUA = decodeHtml(userAgent);
            
            // –û–ø—Ä–µ–¥–µ–ª—è–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é
            const browserInfo = getBrowserInfo(decodedUA);
            const ipType = getIpTypeInfo(ip);
            
            content.innerHTML = `
                <div class="row">
                    <div class="col-md-6">
                        <h6>üåê –°–µ—Ç–µ–≤—ã–µ –¥–∞–Ω–Ω—ã–µ:</h6>
                        <table class="table table-sm">
                            <tr><th>IP –∞–¥—Ä–µ—Å:</th><td><code>${ip}</code></td></tr>
                            <tr><th>–¢–∏–ø:</th><td>${ipType}</td></tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h6>üíª –°–∏—Å—Ç–µ–º–∞:</h6>
                        <table class="table table-sm">
                            <tr><th>–ë—Ä–∞—É–∑–µ—Ä:</th><td>${browserInfo.browser}</td></tr>
                            <tr><th>–û–°:</th><td>${browserInfo.os}</td></tr>
                            <tr><th>–£—Å—Ç—Ä–æ–π—Å—Ç–≤–æ:</th><td>${browserInfo.device}</td></tr>
                        </table>
                    </div>
                </div>
                <div class="mt-3">
                    <button class="btn btn-sm btn-secondary" 
                            onclick="document.getElementById('details').style.display='none'">
                        ‚úï –ó–∞–∫—Ä—ã—Ç—å
                    </button>
                </div>
            `;
            
            details.style.display = 'block';
            details.scrollIntoView({ behavior: 'smooth' });
        }
        
        // –í—Å–ø–æ–º–æ–≥–∞—Ç–µ–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏
        function decodeHtml(text) {
            const textarea = document.createElement('textarea');
            textarea.innerHTML = text;
            return textarea.value;
        }
        
        function getBrowserInfo(userAgent) {
            if (!userAgent) return { browser: '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ', os: '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ', device: '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ' };
            
            let browser = '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ';
            let os = '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ';
            let device = '–ö–æ–º–ø—å—é—Ç–µ—Ä';
            
            // –ë—Ä–∞—É–∑–µ—Ä
            if (userAgent.includes('Chrome') && !userAgent.includes('Edg')) browser = 'Chrome';
            else if (userAgent.includes('Firefox')) browser = 'Firefox';
            else if (userAgent.includes('Safari') && !userAgent.includes('Chrome')) browser = 'Safari';
            else if (userAgent.includes('Edg')) browser = 'Edge';
            else if (userAgent.includes('Opera')) browser = 'Opera';
            
            // –û–°
            if (userAgent.includes('Windows')) os = 'Windows';
            else if (userAgent.includes('Mac')) os = 'macOS';
            else if (userAgent.includes('Linux')) os = 'Linux';
            else if (userAgent.includes('Android')) os = 'Android';
            else if (userAgent.includes('iPhone') || userAgent.includes('iPad')) os = 'iOS';
            
            // –£—Å—Ç—Ä–æ–π—Å—Ç–≤–æ
            if (userAgent.includes('Mobile') || userAgent.includes('Android') || userAgent.includes('iPhone')) {
                device = 'üì± –ú–æ–±–∏–ª—å–Ω–æ–µ';
            }
            
            return { browser, os, device };
        }
        
        function getIpTypeInfo(ip) {
            if (!ip) return '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ';
            
            if (ip === '127.0.0.1' || ip === '::1') return '–õ–æ–∫–∞–ª—å–Ω—ã–π –∫–æ–º–ø—å—é—Ç–µ—Ä (–≤—ã)';
            if (ip.startsWith('192.168.')) return '–õ–æ–∫–∞–ª—å–Ω–∞—è —Å–µ—Ç—å (—Ä–æ—É—Ç–µ—Ä)';
            if (ip.startsWith('10.')) return '–õ–æ–∫–∞–ª—å–Ω–∞—è —Å–µ—Ç—å';
            
            return '–ü—É–±–ª–∏—á–Ω—ã–π IP –∏–Ω—Ç–µ—Ä–Ω–µ—Ç–∞';
        }
    </script>
    
