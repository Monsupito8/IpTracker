@page "/admin"
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext

@{
    var allLinks = await DbContext.TrackingLinks
        .Include(l => l.Visits)
        .OrderByDescending(l => l.CreatedAt)
        .ToListAsync();
    
    var allVisits = await DbContext.LinkVisits
        .Include(v => v.Link)
        .OrderByDescending(v => v.VisitedAt)
        .Take(100)
        .ToListAsync();
    
    var totalVisits = allLinks.Sum(l => l.Visits.Count);
    var uniqueIPs = allVisits.Select(v => v.VisitorIp).Distinct().Count();
    var todayVisits = allVisits.Count(v => v.VisitedAt.Date == DateTime.UtcNow.Date);
}

