@page "/admin"
@using IpTracker.Data
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext

@{
    var allLinks = await DbContext.TrackingLinks
        .Include(l => l.Visits)
        .OrderByDescending(l => l.CreatedAt)
        .ToListAsync();
    
    var allVisits = await DbContext.LinkVisits
        .Include(v => v.Link)
        .OrderByDescending(v => v.VisitedAt)
        .Take(1000)
        .ToListAsync();
    
    // –ü–†–ê–í–ò–õ–¨–ù–ê–Ø —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞
    var totalVisits = allLinks.Sum(l => l.Visits.Count);
    var uniqueIPs = allVisits.Select(v => v.VisitorIp).Distinct().Count();
    var todayVisits = allVisits.Count(v => v.VisitedAt.Date == DateTime.UtcNow.Date);
    var yesterdayVisits = allVisits.Count(v => v.VisitedAt.Date == DateTime.UtcNow.AddDays(-1).Date);
    
    // –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ –ø–æ –±—Ä–∞—É–∑–µ—Ä–∞–º
    var browserStats = allVisits
        .GroupBy(v => GetBrowserName(v.UserAgent))
        .Select(g => new { Browser = g.Key, Count = g.Count() })
        .OrderByDescending(x => x.Count)
        .ToList();
}

