@page "/admin"
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext

@{
    var allLinks = await DbContext.TrackingLinks
        .Include(l => l.Visits)
        .OrderByDescending(l => l.CreatedAt)
        .ToListAsync();
    
    var allVisits = await DbContext.LinkVisits
        .Include(v => v.Link)
        .OrderByDescending(v => v.VisitedAt)
        .Take(100)
        .ToListAsync();
    
    var totalVisits = allLinks.Sum(l => l.Visits.Count);
    var uniqueIPs = allVisits.Select(v => v.VisitorIp).Distinct().Count();
    var todayVisits = allVisits.Count(v => v.VisitedAt.Date == DateTime.UtcNow.Date);
    
    var currentDomain = $"{Request.Scheme}://{Request.Host}";
}

@functions {
    private string GetBrowserName(string userAgent)
    {
        if (string.IsNullOrEmpty(userAgent)) return "Unknown";
        if (userAgent.Contains("Chrome")) return "Chrome";
        if (userAgent.Contains("Firefox")) return "Firefox";
        if (userAgent.Contains("Safari")) return "Safari";
        if (userAgent.Contains("Edge")) return "Edge";
        return "Other";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IP Tracker - Admin Panel</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { 
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #333;
            padding: 20px;
            min-height: 100vh;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        .header {
            background: white;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 25px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            text-align: center;
        }
        .header h1 {
            color: #667eea;
            font-size: 2.5rem;
            margin-bottom: 10px;
            font-weight: 700;
        }
        .header p {
            color: #666;
            font-size: 1.1rem;
        }
        .stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 25px;
        }
        .stat-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            text-align: center;
            transition: transform 0.3s;
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
        .stat-number {
            font-size: 3rem;
            font-weight: bold;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .stat-label {
            color: #666;
            margin-top: 10px;
            font-size: 1rem;
        }
        .section {
            background: white;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 25px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }
        .section h2 {
            color: #333;
            margin-bottom: 25px;
            font-size: 1.8rem;
            font-weight: 600;
        }
        .form-group {
            margin-bottom: 20px;
        }
        label {
            display: block;
            margin-bottom: 8px;
            color: #555;
            font-weight: 600;
        }
        input {
            width: 100%;
            padding: 15px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 1rem;
            transition: border-color 0.3s;
        }
        input:focus {
            outline: none;
            border-color: #667eea;
        }
        .btn {
            padding: 15px 30px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }
        .btn-danger {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            padding: 10px 20px;
            font-size: 0.9rem;
        }
        .btn-copy {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            padding: 10px 20px;
            font-size: 0.9rem;
            margin-right: 10px;
        }
        .links-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        .links-table th {
            background: #f8f9fa;
            padding: 15px;
            text-align: left;
            font-weight: 600;
            color: #333;
            border-bottom: 2px solid #e0e0e0;
        }
        .links-table td {
            padding: 15px;
            border-bottom: 1px solid #f0f0f0;
        }
        .links-table tr:hover {
            background: #f8f9fa;
        }
        .visits-list {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }
        .visit-item {
            background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
            padding: 20px;
            border-radius: 10px;
            border-left: 4px solid #667eea;
        }
        .ip {
            font-family: 'Courier New', monospace;
            background: #667eea;
            color: white;
            padding: 5px 12px;
            border-radius: 6px;
            margin-right: 10px;
            font-weight: 600;
        }
        .url {
            color: #667eea;
            text-decoration: none;
            word-break: break-all;
            font-weight: 500;
        }
        .url:hover {
            text-decoration: underline;
        }
        .message {
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 25px;
            font-weight: 500;
        }
        .message.success {
            background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
            color: #0f5132;
        }
        .message.error {
            background: linear-gradient(135deg, #fbc2eb 0%, #a6c1ee 100%);
            color: #842029;
        }
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #999;
        }
        .empty-state .icon {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }
        .refresh-btn {
            position: fixed;
            bottom: 30px;
            right: 30px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            font-size: 1.5rem;
            cursor: pointer;
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
            transition: transform 0.3s;
        }
        .refresh-btn:hover {
            transform: rotate(180deg);
        }
        .link-display {
            background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
        }
        .link-display h3 {
            color: #667eea;
            margin-bottom: 15px;
        }
        .link-box {
            background: white;
            padding: 15px;
            border-radius: 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 10px 0;
        }
        .link-text {
            font-family: 'Courier New', monospace;
            font-weight: 600;
            color: #333;
            word-break: break-all;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üîó IP Tracker</h1>
            <p>Track every click on your links</p>
        </div>
        
        @if (!string.IsNullOrEmpty(Request.Query["message"]))
        {
            <div class="message success">
                ‚úÖ @Request.Query["message"]
            </div>
        }
        
        @if (!string.IsNullOrEmpty(Request.Query["error"]))
        {
            <div class="message error">
                ‚ùå @Request.Query["error"]
            </div>
        }
        
        <div class="stats">
            <div class="stat-card">
                <div class="stat-number">@totalVisits</div>
                <div class="stat-label">Total Visits</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">@uniqueIPs</div>
                <div class="stat-label">Unique IPs</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">@todayVisits</div>
                <div class="stat-label">Today</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">@allLinks.Count</div>
                <div class="stat-label">Active Links</div>
            </div>
        </div>
        
        <div class="section">
            <h2>‚ûï Create New Link</h2>
            <form method="post" action="/api/tracker/generate">
                <div class="form-group">
                    <label for="targetUrl">Target URL</label>
                    <input type="url" id="targetUrl" name="TargetUrl" 
                           placeholder="https://example.com" required>
                </div>
                <div class="form-group">
                    <label for="note">Description (optional)</label>
                    <input type="text" id="note" name="Note" 
                           placeholder="My campaign link">
                </div>
                <button type="submit" class="btn">
                    Create Tracking Link
                </button>
            </form>
            
            @if (!string.IsNullOrEmpty(Request.Query["newLink"]))
            {
                var linkId = Request.Query["linkId"].ToString();
                var trackingUrl = $"{currentDomain}/track/{linkId}";
                
                <div class="link-display">
                    <h3>‚úÖ Link Created Successfully!</h3>
                    <div class="link-box">
                        <span class="link-text" id="trackingLink">@trackingUrl</span>
                        <button class="btn btn-copy" onclick="copyLink('@trackingUrl')">
                            üìã Copy
                        </button>
                    </div>
                    <p style="color: #666; margin-top: 10px;">
                        <small>‚û°Ô∏è Redirects to: @Request.Query["targetUrl"]</small>
                    </p>
                </div>
            }
        </div>
        
        <div class="section">
            <h2>üìä Your Links</h2>
            @if (allLinks.Any())
            {
                <table class="links-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Description</th>
                            <th>Target URL</th>
                            <th>Visits</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var link in allLinks)
                        {
                            var trackUrl = $"{currentDomain}/track/{link.Id}";
                            <tr>
                                <td><strong>@link.Id</strong></td>
                                <td>@(link.Note ?? "No description")</td>
                                <td>
                                    <a href="@link.TargetUrl" target="_blank" class="url">
                                        @(link.TargetUrl.Length > 40 ? link.TargetUrl.Substring(0, 40) + "..." : link.TargetUrl)
                                    </a>
                                </td>
                                <td><strong>@link.Visits.Count</strong></td>
                                <td>@link.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                                <td>
                                    <button class="btn btn-copy" onclick="copyLink('@trackUrl')">
                                        Copy Link
                                    </button>
                                    <a href="/api/tracker/delete/@link.Id" 
                                       class="btn btn-danger"
                                       onclick="return confirm('Delete this link and all its visit data?')">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <div class="icon">üîó</div>
                    <h3>No links created yet</h3>
                    <p>Create your first tracking link above</p>
                </div>
            }
        </div>
        
        <div class="section">
            <h2>üëÅÔ∏è Recent Visits</h2>
            @if (allVisits.Any())
            {
                <div class="visits-list">
                    @foreach (var visit in allVisits.Take(20))
                    {
                        <div class="visit-item">
                            <div style="display: flex; justify-content: space-between; flex-wrap: wrap;">
                                <div>
                                    <span class="ip">@visit.VisitorIp</span>
                                    <span style="color: #666; font-weight: 500;">
                                        @visit.VisitedAt.ToString("MM/dd/yyyy HH:mm:ss")
                                    </span>
                                </div>
                                @if (visit.Link != null)
                                {
                                    <span style="color: #667eea; font-weight: 600;">
                                        Link: @visit.Link.Id
                                    </span>
                                }
                            </div>
                            <div style="margin-top: 8px; color: #666;">
                                üåê @GetBrowserName(visit.UserAgent)
                            </div>
                        </div>
                    }
                </div>
                @if (allVisits.Count > 20)
                {
                    <p style="text-align: center; margin-top: 20px; color: #666;">
                        Showing 20 of @allVisits.Count total visits
                    </p>
                }
            }
            else
            {
                <div class="empty-state">
                    <div class="icon">üëÅÔ∏è</div>
                    <h3>No visits yet</h3>
                    <p>Share your tracking links to see visitor data here</p>
                </div>
            }
        </div>
    </div>
    
    <button class="refresh-btn" onclick="location.reload()" title="Refresh Data">
        üîÑ
    </button>
    
    <script>
        function copyLink(url) {
            navigator.clipboard.writeText(url).then(function() {
                alert('Link copied: ' + url);
            }).catch(function(err) {
                alert('Failed to copy. Please copy manually: ' + url);
            });
        }
        
        setTimeout(function() {
            location.reload();
        }, 30000);
    </script>
</body>
</html>